{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./dist", 
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
  
    "include": [
      "src/**/*.ts", // Указываем только файлы .ts, которые нужно компилировать
  
    ],
    "exclude": [
      "node_modules", 
      "dist", // Исключаем папку dist, чтобы не компилировать уже готовые файлы
      "**/*.js" // Исключаем все .js файлы, если они появляются в проекте
    ]
  }
  