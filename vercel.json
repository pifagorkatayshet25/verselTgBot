{
    "version": 2,
   
    
    
    "builds": [
      {
        "src": "backend/src/index.ts",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/src/main.ts",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/dist/index.html",
        "use": "@vercel/static"
      },
      {
        "src": "frontend/dist/assets/(.*)",
        "use": "@vercel/static"
      }
    ],
    
    "routes": [      
      {
        "src": "/graphql/*",
        "dest": "backend/src/index.ts"
      },
      { "handle": "filesystem" },
      {
        "src": "/frontend/dist/assets/(.*)",
        "dest": "/frontend/dist/assets/"
      },   
      { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
      
    ]
    
  }